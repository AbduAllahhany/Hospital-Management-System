@model IEnumerable<PatientsIndexModel>

@{
    ViewData["Title"] = "Patients List";
}

<div class="container mt-5">
    <h2 class="text-center">Patients List</h2>

    <!-- Add New Patient Button -->
    <div class="container mt-5">

        <div class="row justify-content-center">
            <div class="col-md-10 text-right mb-3">
            <form asp-controller="Patient" asp-action="Create" method="get">
                <button type="submit" class="btn add-new-btn-sm">
                    <i class="fas fa-user-plus"></i> Add Patient
                </button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Patient Name</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.Name</td>
                            <td class="text-center">
                            <form asp-controller = "Patient" method="get">

                                    <button type="submit" asp-action="MedicalRecords" asp-route-id="@patient.UserId" class="btn btn-primary btn-sm">Medical Records</button>
                                    <button type="submit" asp-action="Appointments" asp-route-id="@patient.UserId" class="btn btn-info btn-sm">Appointments</button>
                                    <button type="submit" asp-route-id="@patient.UserId" asp-action="Edit" class="btn btn-success btn-sm">Edit</button>
                            </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this patient?");
        }
    </script>
}

<style>
    /* Smaller Add New Patient Button Styling */
    .add-new-btn-sm {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 5px 12px; /* Reduced padding */
        font-size: 14px; /* Smaller font */
        border-radius: 5px; /* Slightly smaller border radius */
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .add-new-btn-sm i {
            margin-right: 5px; 
        }

        .add-new-btn-sm:hover {
            background-color: #e65c00;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .add-new-btn-sm:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(255, 102, 0, 0.4);
        }
</style>