@model Patient
<style>
    body {
        background-color: #f2f5f8;
    }

    .navbar {
        background-color: #5a67d8;
    }

    .navbar-brand, .nav-link {
        color: #fff !important;
    }

    .card {
        border: none;
        border-radius: 16px;
        background-color: #fff;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: bold;
        color: #5a67d8;
    }

    .btn-custom {
        background-color: #5a67d8;
        color: white;
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
    }

        .btn-custom:hover {
            background-color: #434aa8;
        }

    .section-title {
        margin-bottom: 1.5rem;
        color: #5a67d8;
        font-weight: bold;
        border-bottom: 3px solid #5a67d8;
        display: inline-block;
        padding-bottom: 0.5rem;
    }

    .icon-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #5a67d8;
        color: white;
        font-size: 24px;
        margin-bottom: 15px;
    }
</style>

<div class="container my-5">
    <h2 class="text-center mb-5">Patient Dashboard</h2>

    <!-- Patient Information -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-person"></i>
                </div>
                <h5 class="card-title">Patient Information</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Name:</strong> @Model.Name</li>
                    <li><strong>Age:</strong> @Model.Age</li>
                    <li><strong>Gender:</strong> @Model.Gender</li>
                    <li><strong>Blood Group:</strong> @Model.BloodGroup</li>
                    <li><strong>Contact:</strong> @Model.ContactNumber</li>
                </ul>
            </div>
        </div>

        <!-- Health Overview -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-heart"></i>
                </div>
                <h5 class="card-title">Health Overview</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Chronic Conditions:</strong> @Model.ChronicConditions</li>
                    <li><strong>Allergies:</strong> @Model.Allergies</li>
                </ul>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h5 class="card-title">Next Appointment</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Date:</strong> @Model.Appointments.FirstOrDefault()?.Date.ToShortDateString()</li>
                    <li><strong>Doctor:</strong> @Model.Appointments.FirstOrDefault()?.Doctor</li>
                    <li><strong>Department:</strong> @Model.Appointments.FirstOrDefault()?.Department</li>
                </ul>
                <a href="#" class="btn btn-custom mt-3">View All Appointments</a>
            </div>
        </div>
    </div>

    <!-- Prescriptions Section -->
    <h3 class="section-title">Prescriptions</h3>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card p-3">
                <ul class="list-group list-group-flush">
                    @foreach (var prescription in Model.Prescriptions)
                    {
                        <li class="list-group-item">
                            @prescription.Medication <small class="text-muted">(Expires: @prescription.ExpiryDate.ToShortDateString())</small>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Medical Reports Section -->
        <div class="col-md-6 mb-3">
            <h3 class="section-title">Medical Reports</h3>
            <div class="card p-3">
                <ul class="list-group list-group-flush">
                    @foreach (var report in Model.MedicalReports)
                    {
                        <li class="list-group-item">
                            <a href="@report.ReportUrl" target="_blank" class="text-decoration-none">
                                @report.ReportName <i class="bi bi-file-earmark-text"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
