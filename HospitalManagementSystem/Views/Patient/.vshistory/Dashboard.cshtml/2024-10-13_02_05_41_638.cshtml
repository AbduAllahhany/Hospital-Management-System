<title>Patient Dashboard</title>

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f0f4f7;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border: none;
        border-radius: 16px;
        background-color: #ffffff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-weight: 600;
        font-size: 1.2rem;
        color: #2d3748;
    }

    .btn-custom {
        background-color: #48bb78;
        color: white;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
    }

        .btn-custom:hover {
            background-color: #38a169;
        }

    .icon-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #48bb78;
        color: white;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .section-title {
        font-weight: 600;
        font-size: 1.4rem;
        color: #48bb78;
        margin: 1.5rem 0 1rem;
        text-align: center;
    }

    .centered-content {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .list-unstyled li {
        margin-bottom: 0.4rem;
        font-size: 1rem;
        color: #4a5568;
    }

    h2 {
        font-size: 2rem;
        color: #48bb78;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .card p {
        color: #718096;
    }

    .container {
        max-width: 960px;
    }

    .btn-outline-custom {
        background-color: transparent;
        border: 1px solid #48bb78;
        color: #48bb78;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

        .btn-outline-custom:hover {
            background-color: #48bb78;
            color: white;
        }
</style>

<div class="container my-5">
    <h2 class="text-center">Patient Dashboard</h2>

    <!-- Patient Information -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-person"></i>
                </div>
                <h5 class="card-title">Patient Information</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Name:</strong> @Model.Name</li>
                    <li><strong>Age:</strong> @Model.Age</li>
                    <li><strong>Gender:</strong> @Model.Gender</li>
                    <li><strong>Blood Group:</strong> @Model.BloodGroup</li>
                </ul>
            </div>
        </div>

        <!-- Health Overview -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <h5 class="card-title">Health Overview</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Chronic Conditions:</strong> @Model.ChronicConditions</li>
                    <li><strong>Allergies:</strong> @Model.Allergies</li>
                </ul>
                <!-- Button to view all medical records -->
                <form asp-action="MedicalRecords" asp-controller="Patient" method="post">
                    <input type="submit" class="btn btn-custom mt-3" value="View All Medical Records" />
                </form>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h5 class="card-title">Next Appointment</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Date:</strong> @Model.NextAppointmentDateTime?.ToShortDateString()</li>
                    <li><strong>Doctor:</strong> @Model.DoctorName</li>
                </ul>
                <form asp-action="Appointments" asp-controller="Patient" method="get">
                    <input type="submit" class="btn btn-custom mt-3" value="View All Appointments" />
                </form>
            </div>
        </div>
    </div>

    <!-- Make Appointment Button -->
    <div class="row mb-4 centered-content">
        <a href="@Url.Action("MakeAppointment","Patient")" class="btn btn-outline-custom">Make Appointment</a>
    </div>
</div>

<!-- Bootstrap 5 JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
