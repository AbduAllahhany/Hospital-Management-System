@model PatientDashBoardModel
<title>Patient Dashboard</title>

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 12px;
        background-color: #fff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .card-title {
        font-weight: bold;
        color: #007bff;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .icon-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #007bff;
        color: white;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .section-title {
        margin: 2rem 0 1rem;
        font-weight: bold;
        color: #007bff;
        border-bottom: 2px solid #007bff;
        display: inline-block;
        padding-bottom: 0.5rem;
    }

    .centered-content {
        width: 50%;
        margin: 0 auto;
        text-align: center;
    }

    .list-unstyled li {
        margin-bottom: 0.5rem;
    }

    h2 {
        font-weight: bold;
        color: #007bff;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container my-5">
    <h2 class="text-center">Patient Dashboard</h2>

    <!-- Patient Information -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-person"></i>
                </div>
                <h5 class="card-title">Patient Information</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Name:</strong> @Model.Name</li>
                    <li><strong>Age:</strong> @Model.Age</li>
                    <li><strong>Gender:</strong> @Model.Gender</li>
                    <li><strong>Blood Group:</strong> @Model.BloodGroup</li>
                </ul>
            </div>
        </div>

        <!-- Health Overview -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-heart-pulse"></i>
                </div>
                <h5 class="card-title">Health Overview</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Chronic Conditions:</strong> @Model.ChronicConditions</li>
                    <li><strong>Allergies:</strong> @Model.Allergies</li>
                </ul>
                <!-- Button to view all medical records -->
                <form asp-action="MedicalRecords" asp-controller="Patient" method="post">
                    <input type="submit" class="btn btn-custom mt-3" value="View All Medical Records" />
                </form>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h5 class="card-title">Next Appointment</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Date:</strong> @Model.NextAppointmentDateTime?.ToShortDateString()</li>
                    <li><strong>Doctor:</strong> @Model.DoctorName</li>
                </ul>
                <form asp-action="Appointments" asp-controller="Patient" method="get">
                    <input type="submit" class="btn btn-custom mt-3" value="View All Appointments" />
                </form>
            </div>
        </div>
    </div>

    <!-- Make Appointment Button -->
    <div class="row mb-4">
        <div class="col-md-12 centered-content">
            <a href="@Url.Action("MakeAppointment","Patient")" class="btn btn-custom">Make Appointment</a>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
