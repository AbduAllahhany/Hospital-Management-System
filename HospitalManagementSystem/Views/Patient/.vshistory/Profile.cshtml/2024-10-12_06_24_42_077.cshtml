
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Patient Profile</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Full Name:</strong> @Model.FullName</p>
                            <p><strong>Gender:</strong> @Model.Gender</p>
                            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
                            <p><strong>National ID/Passport:</strong> @Model.NationalIdOrPassport</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                            <p><strong>Email Address:</strong> @Model.EmailAddress</p>
                            <p><strong>Address:</strong> @Model.Address</p>
                        </div>
                    </div>

                    <hr />
                    <hr />

                    <h5 class="mb-3">Medical Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Blood Type:</strong> @Model.BloodType</p>
                            <p><strong>Allergies:</strong> @Model.Allergies ?? "None"</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Chronic Diseases:</strong> @Model.ChronicDiseases ?? "None"</p>
                            <p><strong>Current Medications:</strong> @Model.CurrentMedications ?? "None"</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Edit", "Patients", new { id = Model.Id })" class="btn btn-warning">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>