@model IEnumerable<AppointmentsIndexModel>

@{
    ViewData["Title"] = "Appointments List";
}

<div class="container mt-5">
    <h2 class="text-center">Appointments List</h2>

    <!-- Add New Appointment Button -->
    <div class="container mt-5">

        <div class="row justify-content-center">
            <div class="col-md-10 text-right mb-3">
                <form asp-controller="Appointment" asp-action="Create" method="get">
                    <button type="submit" class="btn add-new-btn-sm">
                        <i class="fas fa-user-plus"></i> Add Appointment
                    </button>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-10">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Doctor Name</th>
                            <th scope="col">Patient Name</th>
                            <th scope="col"> Date</th>
                            <th scope="col"> Status</th>

                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Appointment in Model)
                        {
                            <tr>
                                <td>@Appointment.DoctorName</td>
                                <td>@Appointment.PatientName</td>
                                <td>@Appointment.AppointmentDate.ToString("g")</td>
                                <!-- Status Column -->
                                <td class="text-center">
                                    <span class="@(Appointment.Status == Status.Pending ? "text-warning" : Appointment.Status == Status.Confirmed ? "text-success" : "text-danger")">
                                        @Appointment.Status.ToString()
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (Appointment.Status == Status.Pending)
                                    {
                                        <form asp-controller="Appointment" method="post">
                                            <button type="submit" asp-action="Confirm" asp-route-id="@Appointment.Id" class="btn btn-danger btn-sm">Confirm</button>
                                            <a type="submit" asp-action="Edit" asp-route-id="@Appointment.Id" class="btn btn-danger btn-sm">Edit</a>
                                            <button type="submit" asp-action="Cancel"  asp-route-id="@Appointment.Id" class="btn btn-danger btn-sm">Cancel</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No actsions available</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this Appointment?");
        }
    </script>
}

<style>
    /* Smaller Add New Appointment Button Styling */
    .add-new-btn-sm {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 5px 12px; /* Reduced padding */
        font-size: 14px; /* Smaller font */
        border-radius: 5px; /* Slightly smaller border radius */
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .add-new-btn-sm i {
            margin-right: 5px;
        }

        .add-new-btn-sm:hover {
            background-color: #e65c00;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .add-new-btn-sm:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(255, 102, 0, 0.4);
        }
</style>