@using HospitalManagementSystem.Core.Entities
@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Appointments List";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Appointment ID</th>
            @*             <th>Patient ID</th>
            <th>Doctor ID</th> *@
            <th>Appointment Date</th>
            <th>Appointment Time</th>
            <th>Reason</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.PatientID</td>
                <td>@appointment.DoctorID</td> 
                <td>@appointment.DateTime.ToShortDateString()</td>
                <td>@appointment.Reason</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
