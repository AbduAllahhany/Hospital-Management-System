<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h4><i class="fas fa-calendar-alt"></i> Appointment Details</h4>
            <!-- Buttons for edit and adding medical record -->
            <div>
                <a href="@Url.Action("Edit", "Appointments", new { id = Model.AppointmentId })" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                @if (!Model.IsMedicalRecordCreated)
                {
                    <a href="@Url.Action("CreateMedicalRecord", "MedicalRecords", new { appointmentId = Model.AppointmentId })" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add Medical Record
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><i class="fas fa-user"></i> Patient Name:</h5>
                    <p class="ms-4">@Model.PatientName</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="fas fa-user-md"></i> Doctor Name:</h5>
                    <p class="ms-4">@Model.DoctorName</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><i class="fas fa-clock"></i> Appointment Date & Time:</h5>
                    <p class="ms-4">@Model.DateTime.ToString("f")</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="fas fa-exclamation-circle"></i> Reason:</h5>
                    <p class="ms-4">@Model.Reason</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h5><i class="fas fa-info-circle"></i> Status:</h5>
                    <p class="ms-4">@Model.Status</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="fas fa-file-medical"></i> Medical Record Created:</h5>
                    <p class="ms-4">
                        @(Model.IsMedicalRecordCreated ? "Yes" : "No")
                        <span class="ms-2">
                            @(Model.MedicalRecordId.HasValue ? $"(Record ID: {Model.MedicalRecordId.Value})" : "")
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>