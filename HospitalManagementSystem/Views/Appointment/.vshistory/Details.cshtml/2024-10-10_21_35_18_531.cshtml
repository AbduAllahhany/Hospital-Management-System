@using HospitalManagementSystem.Core.Entities
@model Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<h1>Appointment Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Appointment ID
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentID
        </dd>
         <dt class="col-sm-2">
        Patient ID
        </dt>
        <dd class="col-sm-10">
        @Model.PatientID
        </dd>
        <dt class="col-sm-2">
        Doctor ID
        </dt>
        <dd class="col-sm-10">
        @Model.DoctorID
        </dd> 
        <dt class="col-sm-2">
            Appointment Date
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Appointment Time
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentTime
        </dd>
        <dt class="col-sm-2">
            Reason
        </dt>
        <dd class="col-sm-10">
            @Model.Reason
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
