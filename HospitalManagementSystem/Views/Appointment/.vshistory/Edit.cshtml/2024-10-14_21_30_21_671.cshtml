@model EditAppointmentModel

@{
    ViewBag.Title = "Edit Appointment";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-calendar-alt"></i> Edit Appointment</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.Id)

                <div class="form-group">
                    <label for="PatientName"><i class="fas fa-user"></i> Patient Name</label>
                    @Html.TextBoxFor(m => m.PatientName, new { @class = "form-control", @placeholder = "Enter patient name" })
                </div>

                <div class="form-group">
                    <label for="DoctorName"><i class="fas fa-user-md"></i> Doctor Name</label>
                    @Html.TextBoxFor(m => m.DoctorName, new { @class = "form-control", @placeholder = "Enter doctor name" })
                </div>

                <div class="form-group">
                    <label for="AppointmentDateTime"><i class="fas fa-clock"></i> Appointment Date & Time</label>
                    @Html.TextBoxFor(m => m.AppointmentDateTime, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                </div>

                <div class="form-group">
                    <label for="Reason"><i class="fas fa-sticky-note"></i> Reason</label>
                    @Html.TextAreaFor(m => m.Reason, new { @class = "form-control", rows = 3, @placeholder = "Enter reason for the appointment" })
                </div>

                <div class="form-group">
                    <label for="Status"><i class="fas fa-tasks"></i> Status</label>
                    @Html.EnumDropDownListFor(m => m.Status, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-success mt-3"><i class="fas fa-save"></i> Save</button>
                <a href="@Url.Action("Index", "Appointment")" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back</a>
            }
        </div>
    </div>
</div>

<!-- Include FontAwesome -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
