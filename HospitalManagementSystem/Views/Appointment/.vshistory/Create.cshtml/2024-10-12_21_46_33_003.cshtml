@model CreateAppointementModel

<h2 class="text-center mt-4">Appointment Details</h2>

<div class="container mt-4">
    <div class="row">
        <!-- Loop through Patient and Doctor User Names and display them in cards -->
        @foreach (var patient in Model.PatientUserName)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-md fa-2x text-primary mr-3"></i>
                            <h5 class="card-title">@patient</h5>
                        </div>
                        <p class="card-text">
                            <strong>Doctor:</strong>
                            @foreach (var doctor in Model.DoctortUserName)
                            {
                                <span class="badge badge-info">@doctor</span>
                            }
                        </p>
                        <p class="card-text">
                            <strong>Appointment Date:</strong>
                            <span class="text-muted">@Model.AppointmentDate.ToString("g")</span>
                        </p>
                        <p class="card-text">
                            <strong>Reason:</strong>
                            <span>@Model.Reason</span>
                        </p>
                        <div class="text-right">
                            <button class="btn btn-success">
                                <i class="fas fa-calendar-check"></i> Confirm Appointment
                            </button>
                            <button class="btn btn-danger">
                                <i class="fas fa-calendar-times"></i> Cancel Appointment
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optionally include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
