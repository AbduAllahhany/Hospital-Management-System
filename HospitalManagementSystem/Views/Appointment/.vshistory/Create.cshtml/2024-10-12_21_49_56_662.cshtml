@model CreateAppointementModel
<h2 class="text-center mt-4">Create Appointment</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-plus mr-2"></i> New Appointment</h4>
                </div>
                <div class="card-body">
                    <!-- Begin form for creating an appointment -->
                    <form asp-controller="Appointment" asp-action="Create" method="post">
                        <div class="form-group">
                            <label for="PatientUserName">
                                <i class="fas fa-user"></i> Patient User Name
                            </label>
                            <select asp-for="PatientUserName" class="form-control" multiple>
                                @foreach (var patient in Model.PatientUserName)
                                {
                                    <option value="@patient">@patient</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="DoctorUserName">
                                <i class="fas fa-user-md"></i> Doctor User Name
                            </label>
                            <select asp-for="DoctortUserName" class="form-control" multiple>
                                @foreach (var doctor in Model.DoctortUserName)
                                {
                                    <option value="@doctor">@doctor</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="AppointmentDate">
                                <i class="fas fa-calendar"></i> Appointment Date
                            </label>
                            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Reason">
                                <i class="fas fa-info-circle"></i> Reason for Appointment
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <!-- Submit and Cancel buttons -->
                        <div class="text-right">
                            <button type="submit" class="btn btn-success btn-lg mr-2">
                                <i class="fas fa-calendar-check"></i> Create Appointment
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<!-- Optional: Custom CSS for additional styling -->
<style>
    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }
</style>