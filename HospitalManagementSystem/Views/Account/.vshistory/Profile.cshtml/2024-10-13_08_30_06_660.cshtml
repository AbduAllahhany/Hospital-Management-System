@model ProfileModel
@{
    ViewData["Title"] = "Doctor Profile";
}

<div class="container mt-4">
    <h2 class="text-center">Doctor Profile</h2>
    
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Profile Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <!-- Name -->
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="@Model.Name" readonly />
                            </div>
                        </div>

                        <!-- Specialization -->
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Specialization:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" value="@Model.Role" readonly />
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Email:</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" value="@Model.Email" readonly />
                            </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Phone Number:</label>
                            <div class="col-sm-9">
                                <input type="tel" class="form-control" value="@Model.PhoneNumber" readonly />
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">Address:</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3" readonly>@Model.Address</textarea>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mb-3 row">
                            <div class="col-sm-9 offset-sm-3">
                                <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
