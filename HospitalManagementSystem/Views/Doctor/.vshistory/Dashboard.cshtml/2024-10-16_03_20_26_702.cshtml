 @model DoctorDashBoardModel

    <div class="container my-5">
        <h2 class="text-center">Doctor Dashboard</h2>

        
            <!-- Doctor Information -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card p-4 text-center">
                        <div class="icon-circle">
                            <i class="bi bi-person"></i>
                        </div>
                        <h5 class="card-title">Doctor Information</h5>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Name:</strong> @Model.DoctorName</li>
                            <li><strong>Age:</strong> @Model.Age</li>
                            <li><strong>Gender:</strong> @Model.Gender</li>
                        </ul>
                    </div>
                </div>

                <!-- Appointments Section -->
                <div class="col-md-8">
                    <div class="card p-4 text-center">
                        <div class="icon-circle">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <h5 class="card-title">Appointments</h5>
                        
                            @if (Model.AppointmentDateTime != null)
                            {

                            <ul class="list-unstyled mb-0">
                               <li><strong>Date:</strong> @Model.AppointmentDateTime?.ToShortDateString()</li>
                               <li><strong>Time:</strong> @Model.AppointmentDateTime?.ToShortTimeString()</li>
                               <li><strong>Patient:</strong> @Model.AppointmentPatientName</li>
                             </ul>
                               <button asp-action="Appointments" asp-controller="Doctor"class="btn btn-outline-custom mt-2">View Details</button>
                            }
                            else
                            {
                                 <p>No appointments available.</p>
                            }
                    </div>
                </div>
            </div>
        
    </div>

    <!-- Bootstrap 5 JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f0f4f7;
            font-family: 'Arial', sans-serif;
        }

        .card {
            border: none;
            border-radius: 16px;
            background-color: #ffffff;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
            transition: box-shadow 0.3s ease;
        }

            .card:hover {
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            }

        .card-title {
            font-weight: 600;
            font-size: 1.2rem;
            color: #2d3748;
        }

        .btn-custom {
            background-color: rgb(13, 110, 253);
            color: white;
            border-radius: 8px;
            padding: 0.6rem 1.4rem;
            font-size: 1rem;
        }

            .btn-custom:hover {
                background-color: rgba(13, 110, 253, 0.9);
            }

        .icon-circle {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: rgb(13, 110, 253);
            color: white;
            font-size: 28px;
            margin-bottom: 15px;
        }

        .section-title {
            font-weight: 600;
            font-size: 1.4rem;
            color: rgb(13, 110, 253);
            margin: 1.5rem 0 1rem;
            text-align: center;
        }

        .centered-content {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .list-unstyled li {
            margin-bottom: 0.4rem;
            font-size: 1rem;
            color: #4a5568;
        }

        h2 {
            font-size: 2rem;
            color: rgb(13, 110, 253);
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .card p {
            color: #718096;
        }

        .container {
            max-width: 960px;
        }

        .btn-outline-custom {
            background-color: transparent;
            border: 1px solid rgb(13, 110, 253);
            color: rgb(13, 110, 253);
            border-radius: 8px;
            padding: 0.6rem 1.4rem;
        }

            .btn-outline-custom:hover {
                background-color: rgb(13, 110, 253);
                color: white;
            }
    </style>
