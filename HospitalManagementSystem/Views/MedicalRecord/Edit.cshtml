@model EditMedicalRecordModel

@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">
                <i class="fas fa-edit"></i> Edit Medical Record
            </h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @* Hidden field for the Id *@
                <input type="hidden" asp-for="MedicalRecordId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DoctorName" class="form-label">
                            <i class="fas fa-user-md"></i> Doctor Name
                        </label>
                        <input asp-for="DoctorName" class="form-control" readonly />
                        <span asp-validation-for="DoctorName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PatientName" class="form-label">
                            <i class="fas fa-user-injured"></i> Patient Name
                        </label>
                        <input asp-for="PatientName" class="form-control" readonly />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Discription" class="form-label">
                            <i class="fas fa-pencil-alt"></i> Description
                        </label>
                        <textarea asp-for="Discription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Discription" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Diagnosis" class="form-label">
                            <i class="fas fa-diagnoses"></i> Diagnosis
                        </label>
                        <textarea asp-for="Diagnosis" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Treatment" class="form-label">
                            <i class="fas fa-pills"></i> Treatment
                        </label>
                        <textarea asp-for="Treatment" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Treatment" class="text-danger"></span>
                    </div>
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id ="@Model.MedicalRecordId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Details
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
