@model AdminDashboardModel

<div class="container mt-4">
    <div class="row">
        <!-- Patient Card -->
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Patients</h5>
                    <p class="card-text">@Model.Patients.Count()</p>
                    <i class="fas fa-user-injured fa-2x"></i>
                </div>
            </div>
        </div>

        <!-- Doctor Card -->
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Doctors</h5>
                    <p class="card-text">@Model.Doctors.Count()</p>
                    <i class="fas fa-user-md fa-2x"></i>
                </div>
            </div>
        </div>

        <!-- Nurse Card -->
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Nurses</h5>
                    <p class="card-text">@Model.Nurses.Count()</p>
                    <i class="fas fa-user-nurse fa-2x"></i>
                </div>
            </div>
        </div>

        <!-- Appointments Card -->
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Appointments</h5>
                    <p class="card-text">@Model.Appointments.Count(a => a.AppointmentDate >= DateTime.Now)</p>
                    <i class="fas fa-calendar-alt fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments Table -->
    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Recent Appointments</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments.Take(10))
                    {
                        <tr>
                            <td>@appointment.Patient.Name</td>
                            <td>@appointment.Doctor.Name</td>
                            <td>@appointment.AppointmentDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
