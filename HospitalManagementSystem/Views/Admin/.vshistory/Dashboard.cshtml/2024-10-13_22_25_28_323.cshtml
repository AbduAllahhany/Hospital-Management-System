@using HospitalManagementSystem.Application.Models.Admins
@model AdminDashboardModel
<div class="container mt-4">
    <!-- Dashboard Header -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-center text-primary">Hospital Admin Dashboard</h2>
        </div>
    </div>

    <!-- Cards for Summary Data -->
    <div class="row">
        <!-- Total Patients Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-lg bg-gradient-primary text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Patients</h5>
                        <p class="card-text">@Model.Patients.Count()</p>
                    </div>
                    <i class="fas fa-user-injured fa-3x"></i>
                </div>
            </div>
        </div>

        <!-- Total Doctors Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-lg bg-gradient-success text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Doctors</h5>
                        <p class="card-text">@Model.Doctors.Count()</p>
                    </div>
                    <i class="fas fa-user-md fa-3x"></i>
                </div>
            </div>
        </div>

        <!-- Total Nurses Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-lg bg-gradient-info text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Nurses</h5>
                        <p class="card-text">@Model.Nurses.Count()</p>
                    </div>
                    <i class="fas fa-user-nurse fa-3x"></i>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card shadow-lg bg-gradient-warning text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Upcoming Appointments</h5>
                        <p class="card-text">@Model.Appointments.Count(a => a.DateTime >= DateTime.Now)</p>
                    </div>
                    <i class="fas fa-calendar-alt fa-3x"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments Table -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-secondary text-white">
                    <h3 class="mb-0">Recent Appointments</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Patient</th>
                                <th scope="col">Doctor</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.Appointments.Take(10))
                            {
                                <tr>
                                    <td>@appointment.Patient.Name</td>
                                    <td>@appointment.Doctor.Name</td>
                                    <td>@appointment.AppointmentDate.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
