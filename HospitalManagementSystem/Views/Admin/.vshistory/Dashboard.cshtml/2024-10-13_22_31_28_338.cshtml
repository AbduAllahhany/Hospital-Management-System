@using HospitalManagementSystem.Application.Models.Admins
@model AdminDashboardModel
@model YourNamespace.ViewModels.DashboardViewModel

<div class="container mt-4">
    <!-- Dashboard Header -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-center text-dark mb-4">Hospital Admin Dashboard</h2>
        </div>
    </div>

    <!-- Cards for Summary Data -->
    <div class="row">
        <!-- Total Patients Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-white shadow" style="background-color: #5A67D8;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Patients</h5>
                        <p class="card-text display-6">@Model.Patients.Count()</p>
                    </div>
                    <i class="fas fa-user-injured fa-3x opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Total Doctors Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-white shadow" style="background-color: #38B2AC;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Doctors</h5>
                        <p class="card-text display-6">@Model.Doctors.Count()</p>
                    </div>
                    <i class="fas fa-user-md fa-3x opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Total Nurses Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-white shadow" style="background-color: #F6AD55;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Nurses</h5>
                        <p class="card-text display-6">@Model.Nurses.Count()</p>
                    </div>
                    <i class="fas fa-user-nurse fa-3x opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments Card -->
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-white shadow" style="background-color: #ECC94B;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Upcoming Appointments</h5>
                        <p class="card-text display-6">@Model.Appointments.Count(a => a.AppointmentDate >= DateTime.Now)</p>
                    </div>
                    <i class="fas fa-calendar-alt fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments Table -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-secondary text-white">
                    <h3 class="mb-0">Recent Appointments</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Patient</th>
                                <th scope="col">Doctor</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.Appointments.Take(10))
                            {
                                <tr>
                                    <td>@appointment.Patient.Name</td>
                                    <td>@appointment.Doctor.Name</td>
                                    <td>@appointment.DateTime.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<style>
    /* Custom Styles for Admin Dashboard */
    .card-title {
        font-weight: 600;
        text-transform: capitalize;
        letter-spacing: 1px;
    }

    .card-text {
        font-size: 2rem;
        font-weight: bold;
    }

    .card i {
        opacity: 0.85;
        transition: opacity 0.3s ease-in-out;
    }

    .card:hover i {
        opacity: 1;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        color: #4A5568;
    }

    /* Table Styling */
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        color: #2D3748;
    }

    .table-hover tbody tr:hover {
        background-color: #EDF2F7;
    }

    /* Card Hover Effect */
    .card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
    }


</style>